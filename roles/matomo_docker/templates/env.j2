# Matomo
MATOMO_HOST="{{ matomo_host_name }}"
MATOMO_HOST_IP="{{ matomo_host_ip }}"
MATOMO_HOST_PORT="{{ matomo_host_port }}"

# Database configuration
MARIADB_PASSWORD=testtest
MARIADB_ROOT_PASSWORD=testtest

# MTA configuration

# MTA role can be either "mailpit" or "postfix"
MTA_ROLE={{ matomo_mta_role }}

POSTFIX_RELAYHOST_FQDN={{ matomo_postfix_relayhost_fqdn }}
POSTFIX_RELAYHOST_PORT={{ matomo_postfix_relayhost_port }}
POSTFIX_RELAYHOST_USERNAME="{{ matomo_postfix_relayhost_username }}"
POSTFIX_RELAYHOST_PASSWORD="{{ matomo_postfix_relayhost_password }}"
POSTFIX_RELAYHOST_AUTH_ENABLED={{ matomo_postfix_relayhost_auth_enabled }}
POSTFIX_RELAYHOST_TLS_ENABLED={{ matomo_postfix_relayhost_tls_enabled }}
POSTFIX_MYHOSTNAME={{ matomo_postfix_myhostname }}
POSTFIX_ORIGIN={{ matomo_postfix_origin }}
MAIL_FROM_ADDRESS={{ matomo_mail_from_address }}
